<Window x:Class="frontend.CreateProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Product" Height="600" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Name:" Margin="0,10,0,5"/>
            <TextBox x:Name="nameBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="SKU:" Margin="0,10,0,5"/>
            <TextBox x:Name="skuBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Category Name:" Margin="0,10,0,5"/>
            <TextBox x:Name="categoryBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Quantity:" Margin="0,10,0,5"/>
            <TextBox x:Name="quantityBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Unit Price:" Margin="0,10,0,5"/>
            <TextBox x:Name="priceBox" Margin="0,0,0,10" Padding="5"/>

            <TextBlock Text="Barcode:" Margin="0,10,0,5"/>
            <TextBox x:Name="barcodeBox" Margin="0,0,0,10" Padding="5"/>

            <Button x:Name="createButton"
                    Content="Create Product"
                    Margin="0,20,0,0"
                    Padding="10"
                    Click="createButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
